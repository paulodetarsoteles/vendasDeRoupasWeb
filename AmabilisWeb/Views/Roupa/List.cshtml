@model RoupaListViewModel

<div>
    <h2>@Model.CategoriaAtual</h2>
</div>

<hr />

<div class="container">
    <div class="row">
        @foreach (var roupa in Model.Roupas)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@roupa.ImgUrl" class="img-fluid"></p>
                <h3>Preço: @roupa.Preco.ToString("c")</h3>
                <h4>@roupa.Nome</h4>
                <p>Tamanho: @roupa.Tamanho</p>
            </div>
        }
    </div>
</div>